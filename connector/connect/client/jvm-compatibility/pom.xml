<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.apache.spark</groupId>
    <artifactId>spark-parent_2.12</artifactId>
    <version>3.4.0-SNAPSHOT</version>
    <relativePath>../../../../pom.xml</relativePath>
  </parent>

  <artifactId>spark-connect-client-jvm-compatibility_2.12</artifactId>
  <packaging>jar</packaging>
  <name>Spark Project Connect Scala Client Compatibility</name>
  <url>https://spark.apache.org/</url>
  <properties>
    <sbt.project.name>connect-client-jvm-compatibility</sbt.project.name>
  </properties>

  <dependencies>
    <!-- The only dependency of this module, as we simply repackage the client classpaths to SQL classpaths.-->
    <dependency>
      <groupId>org.apache.spark</groupId>
      <artifactId>spark-connect-client-jvm_${scala.binary.version}</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>
  <build>
    <testOutputDirectory>target/scala-${scala.binary.version}/test-classes</testOutputDirectory>
    <plugins>
      <!--  Use shading to move classes to package spark.sql -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.4.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>org.apache.spark:spark-connect-client-jvm_${scala.binary.version}:*</include>
                </includes>
              </artifactSet>
              <relocations>
                <relocation>
                  <pattern>org.apache.spark.sql.connect.client</pattern>
                  <shadedPattern>org.apache.spark.sql</shadedPattern>
                  <includes>
                    <include>org.apache.spark.sql.connect.client.*</include>
                  </includes>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>